@model MvcPublicacoes.Models.Publicacao

@{
    ViewBag.Title = "Edit";
}

<hgroup class="title">
    <h1>Editar Publicação</h1>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Publicacao</legend>

        @Html.HiddenFor(model => model.IdPublicacao)
        @Html.HiddenFor(model => model.IdAutor)

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @*@Html.ValidationMessageFor(model => model.Titulo)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DtPublicacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DtPublicacao)
            @*@Html.ValidationMessageFor(model => model.DtPublicacao)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdTipoPublicacao)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.IdTipoPublicacao, new SelectList(ViewBag.TiposPublicacoes, "IdTipoPublicacao", "Descricao"), string.Empty)
            @*@Html.ValidationMessageFor(model => model.IdTipoPublicacao)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdInstituicao)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(i => i.IdInstituicao, new SelectList(ViewBag.Instituicoes, "IdInstituicao", "Nome"), string.Empty)
            @*@Html.ValidationMessageFor(model => model.IdInstituicao)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdSituacao)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(s => s.IdSituacao, new SelectList(ViewBag.Situacoes, "IdSituacao", "Descricao"), string.Empty)
            @*@Html.ValidationMessageFor(model => model.IdSituacao)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Localizacao)
            @Html.Label("Ex: Porto Alegre, Rio Grande do Sul, Brasil") 
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Localizacao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Referencia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Referencia)
            @*@Html.ValidationMessageFor(model => model.Referencia)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Resumo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Resumo)
            @*@Html.ValidationMessageFor(model => model.Resumo)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Conceito)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Conceito)
            @*@Html.ValidationMessageFor(model => model.Conceito)*@
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
